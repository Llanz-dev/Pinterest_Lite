def pin_delete(request, pin_id):
    try:
        pin = Pin.objects.get(pin_id=pin_id)
        if pin.user == request.user:
            pin.delete() 
        else:
            own_pin = OwnPin.objects.filter(title=pin.title, user=request.user)     
            print(len(own_pin))
            # pin.users_pin.remove(request.user)                 
            # own_pin.delete()            
        return redirect('home:home')            
    except Pin.DoesNotExist:
        # This is where I query your "save pin" from OwnPin.        
        try:
            own_pin = OwnPin.objects.get(id=pin_id)            
            print(own_pin)
            pin = Pin.objects.filter(title=own_pin.title)
            print(len(pin))
            # pin.users_pin.remove(request.user)
            # own_pin.delete()
            return redirect('accounts:specific-board', own_pin.board.slug)                
        except OwnPin.DoesNotExist:
            raise Http404("Pin does not exist") 

    # This is for the owner of the pin.
    # if own_pin.user == request.user: 
